<h2>Available Chats</h2>

<table class="table">
  <thead>
    <th>Name</th>
    <th>Owner</th>
    <th>Description</th>
    <th></th>
  </thead> 
  <%= for chat <- @chats do %>
    <tr>
      <td><%= chat.name %></td>
      <td><%= chat.user.username %></td>
      <td><%= chat.description %></td>
      <td class="text-right">
        <%= link "Go", to: chat_path(@conn, :show, chat), class: "btn btn-default btn-xs" %>
      </td>
    </tr>
  <% end %>
 </table